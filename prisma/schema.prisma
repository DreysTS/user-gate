generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())

  name       String
  surname    String
  patronymic String?

  dateOfBirth DateTime @map("date_of_birth")

  email    String @unique
  password String

  role UserRole @default(USER)

  status UserStatus @default(ACTIVE)
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  NON_ACTIVE
}
